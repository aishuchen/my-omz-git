# commit 
alias gcm='git commit'
alias gcmv='git commit -v'
alias gcmv!='git commit -v --amend'
alias gcmvn='git commit -v --no-edit'
alias gcmvn!='git commit -v --no-edit --amend'
alias gcmva='git commit -v -a'
alias gcmva!='git commit -v -a --amend'
alias gcman!='git commit -v -a --no-edit --amend'
alias gcmans!='git commit -v -a -s --no-edit --amend'
alias gcmam='git commit -a -m'
alias gcmsm='git commit -s -m'
alias gcmas='git commit -a -s'
alias gcmasm='git commit -a -s -m'
alias gcms='git commit -S'
alias gcmss='git commit -S -s'
alias gcmssm='git commit -S -s -m'
alias gcmmsg='git commit -m'
